remify(value) {
   u = unit(value);
   
   if (u is 'px') {
      return unit(value/16, 'rem');
   } else {
      return unit(value, u);
   }
}

set-font-size(value) {
   font-size: value;
   
   if (value is inherit) {
      /* do nothing */
   } else {
      font-size: remify(value);
   }
}

